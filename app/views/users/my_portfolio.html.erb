<h1>My portfolio</h1>
<!-- <p>Find me in app/views/users/my_portfolio.html.erb</p> -->

<div class="search-area">
  <h3>Search stocks</h3>
  <%= form_tag search_stock_path, remote: true, method: :get do %>
  <div class="form-group row">
    <div class="col-sm-9 no-right-padding">
      <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol",
      autofocus: true, class:"form-control form-control-lg" %> <!-- Here should be the ticker capitalization, I guess  -->
    </div>
    <div class="col-sm-3 no-left-padding">
      <%= button_tag type: :submit, class: "btn btn-success" do %>
        <%= fa_icon 'search 2x' %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
<div id="results"> <!-- Here the results of the search are displayed. -->
</div>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% else %>
<div class="card col-9">
  <p>Your portfolio is currently empty!ðŸ˜¯</p>
</div>
<% end %>
